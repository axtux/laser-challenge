<?xml version="1.0" encoding="UTF-8" standalone="no" ?>

<!DOCTYPE blocks SYSTEM "../../core/assets/XML_format/blocks.dtd">


<blocks>
	<block>
		<name>blocker</name>
		<label>Bloqueur</label>
	</block>
	
	<block>
		<name>gate</name>
		<label>Porte</label>
		<inputs>
			<input orientation="UP">
				<output orientation ="DOWN"/>
			</input>
			<input orientation="DOWN">
				<output orientation="UP"/>
			</input>
		</inputs>
	</block>
	
	<block>
		<name>one-laser_source</name>
		<label>Source</label>
		<inputs>
			<input>
				<output orientation ="UP"/>
			</input>
		</inputs>
	</block>
	
	<block>
		<name>one-laser_target</name>
		<label>Cible</label>
		<required-inputs>
			<input orientation ="UP"/>
		</required-inputs>
	</block>
	
	<block>
		<name>two-laser_target</name>
		<label>Cible</label>
		<required-inputs>
			<input orientation ="RIGHT"/>
			<input orientation ="LEFT"/>
		</required-inputs>
	</block>
	
	<block>
		<name>four-laser_target</name>
		<label>Cible</label>
		<required-inputs>
			<input orientation ="UP"/>
			<input orientation ="RIGHT"/>
			<input orientation ="DOWN"/>
			<input orientation ="LEFT"/>
		</required-inputs>
	</block>
	
	<block>
		<name>one-way_mirror</name>
		<label>Miroir</label>
		<inputs>
			<input orientation="UP">
				<output orientation ="RIGHT"/>
			</input>
			<input orientation="RIGHT">
				<output orientation="UP"/>
			</input>
		</inputs>
	</block>

	
	<block>
		<name>two-way_mirror</name>
		<label>Miroir</label>
		<inputs>
			<input orientation="UP">
				<output orientation ="RIGHT"/>
			</input>
			<input orientation="RIGHT">
				<output orientation="UP"/>
			</input>
			<input orientation="DOWN">
				<output orientation="LEFT"/>
			</input>
			<input orientation="LEFT">
				<output orientation="DOWN"/>
			</input>
		</inputs>
	</block>
	
	<block>
		<name>two-way-straight_splitter</name>
		<label>Diviseur</label>
		<inputs>
			<input orientation="UP">
				<output orientation ="LEFT"/>
				<output orientation ="RIGHT"/>
			</input>
		</inputs>
	</block>
	
	<block>
		<name>two-way-angled-right_splitter</name>
		<label>Diviseur</label>
		<inputs>
			<input orientation="UP">
				<output orientation ="DOWN"/>
				<output orientation ="RIGHT"/>
			</input>
		</inputs>
	</block>
	
	<block>
		<name>two-way-angled-left_splitter</name>
		<label>Diviseur</label>
		<inputs>
			<input orientation="UP">
				<output orientation ="LEFT"/>
				<output orientation ="DOWN"/>
			</input>
		</inputs>
	</block>
	
	<block>
		<name>three-way_splitter</name>
		<label>Diviseur</label>
		<inputs>
			<input orientation="UP">
				<output orientation ="RIGHT"/>
				<output orientation ="LEFT"/>
				<output orientation ="DOWN"/>
			</input>
		</inputs>
	</block>
	
</blocks>
